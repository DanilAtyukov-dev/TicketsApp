<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.danilatyukov.presentation.screens.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            app:destination="@id/mainFragment" />
    </fragment>


    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.danilatyukov.presentation.screens.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <argument
            android:name="usernameKey"
            app:argType="string"
            app:nullable="true" />
    </fragment>


    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.danilatyukov.presentation.screens.SearchFragment"
        android:label="SearchFragment" />
</navigation>